generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id               Int       @id @default(autoincrement())
  telegramId       String    @unique
  username         String?
  firstName        String?
  lastName         String?
  languageCode     String?
  isBot            Boolean   @default(false)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  coins            Float     @default(0)
  level            Int       @default(1)
  miningRate       Float     @default(0.01)

  referredById     Int?
  referredBy       User?     @relation("UserReferrals", fields: [referredById], references: [id])
  referrals        User[]    @relation("UserReferrals")

  lastMiningTick   DateTime?
  isMining         Boolean   @default(false)

  tempCoins        Float     @default(0)
  vaultCapacity    Float     @default(36)

  currentHealth    Float     @default(3600)
  maxHealth        Float     @default(3600)

  currentEnergy    Float     @default(3600)
  maxEnergy        Float     @default(3600)

  healthPerSecond  Float     @default(0.5)
  energyPerSecond  Float     @default(1)

  lastWheelSpin DateTime?
}
